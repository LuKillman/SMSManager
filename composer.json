{
    "name": "simpod/sms-manager",
    "description": "PHP library for sending SMS via SmsManager.cz",
    "keywords": [
        "sms",
        "smsmanager"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Podlipsky",
            "email": "simon@podlipsky.net"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^8.1",
        "ext-dom": "*",
        "ext-simplexml": "*",
        "beberlei/assert": "^3.1",
        "guzzlehttp/guzzle": "^6.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^10.0",
        "phpstan/phpstan": "^1.6.8",
        "phpstan/phpstan-beberlei-assert": "^1.0.1",
        "phpstan/phpstan-phpunit": "^1.1.1",
        "phpstan/phpstan-strict-rules": "^1.4.4",
        "phpunit/phpunit": "^9.5.20"
    },
    "autoload": {
        "psr-4": {
            "SimPod\\SmsManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimPod\\SmsManager\\Tests\\": "tests/"
        }
    }
}
